@using Proje.Models.Entity;
@model List<TBAnnouncement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<h2>Announcements</h2>

<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>Announcement no</th>
        <th>Contant</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Detail</th>
    </tr>
    @foreach (var prs in Model)
    {

      
        <tr class="@renk">
            <td>@prs.ID</td>
            <td>@prs.Header</td>
            <td>@Convert.ToDateTime(prs.DateOfAnnouncement).ToString("dd/MM/yyyy")</td>
            <td><a href="/Announcement/DeleteAnnouncement/@prs.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Announcement/AnnouncementDetail/@prs.ID" class="btn btn-default" style="background-color:skyblue">Details</a></td>
        </tr>
    }
</table>
<br />
<a href="/Announcement/NewAnnouncement/" class="btn btn-primary">Add New Announcement</a>
