@model Proje.Models.Entity.TBstaff_member
@{
    ViewBag.Title = "GetStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Staff Name</label>
        @Html.TextBoxFor(k => k.Name, new { @class = "form-control" })
        <br /><label>Staff Phone</label>
        @Html.TextBoxFor(k => k.Phone, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Update</button>
    </div>
}


