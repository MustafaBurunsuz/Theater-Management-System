@using Proje.Models.Entity
@model List<TBActivity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2> Return List</h2>
<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>Activity ID</th>
        <th>Show Name</th>
        <th>Member</th>
        <th>Staff Name</th>
        <th>Buying Date</th>
        <th> Returning Date</th>

        <th>Details</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBShow.Name</td>
            <td>@k.TBMembers.Name&nbsp @k.TBMembers.Surname</td>
            <td>@k.TBstaff_member.Name</td>
            <td>@Convert.ToDateTime(k.buying_date).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.returning_date).ToString("dd/MM/yyyy")</td>

            <td><a href="/Reservation/GetReturn/@k.ID" class="btn btn-default" style="background-color:#00ffff; color:white">Details</a></td>
        </tr>
    }
</table>
