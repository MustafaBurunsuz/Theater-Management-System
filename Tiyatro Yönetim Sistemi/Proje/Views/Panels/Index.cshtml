
@model Proje.Models.Entity.TBMembers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Panel.cshtml";
}

<h2>Members İnfo</h2>

@using (Html.BeginForm("Index2", "Panels", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder"> Mail Adress:</label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td> @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td> @Html.TextBoxFor(x => x.Password, new { @class = "form-control" }) </td>
        </tr>
        <tr>
            <td> @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" }) </td>
        <tr>
            <td>  @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" }) </td>
        </tr>
        
        <tr>
            <td>
                <button class="btn btn-warning">Update İnfo</button>
            </td>
        </tr>
    </table>
}